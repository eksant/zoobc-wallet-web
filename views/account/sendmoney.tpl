
<!-- Content Row -->
<div class="row">

<div class="col-xl-10 col-lg-10">
  <div class="card">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">Send BCZ</div>
    <!-- Card Body -->
    <div class="card-body">
      
          <form>
              <div class="form-group">
                  <label for="recipient">Recipient</label>
                  <input type="text" class="form-control" id="recipient" placeholder="Recipient">
              </div>
              <div class="form-group">
                  <label for="amount">Amount</label>
                  <input type="text" class="form-control" id="amount" placeholder="Amount">
              </div>
              <div class="form-group">
                  <label for="fee">Fee</label>
                  <input type="text" class="form-control" id="fee" placeholder="Fee">
              </div>
              <div class="form-group">
                  <label for="passphrase">Passphrase</label>
                  <input type="text" class="form-control" id="passphrase" placeholder="Passphrase">
              </div>
              <div class="form-group">
                <button type="reset" class="btn btn-secondary">Cancel</button>
                <button type="submit" class="btn btn-primary">Send BCZ</button>
              </div>  
          </form>
    </div>
  </div>
</div>

</div>

